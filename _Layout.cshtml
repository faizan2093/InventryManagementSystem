<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Jupiter Inventry Management </title>
    @Styles.Render("~/Content/css")

    <link href="~/Content/jquery.dataTables.min.css" rel="stylesheet" />
    <link href="~/Content/dataTables.bootstrap.min.css" rel="stylesheet" />




    @Scripts.Render("~/bundles/modernizr")


    <link href="~/Content/bootstrap.css" rel="stylesheet" />
</head>
<body>

    <style>
        body {
            background-color: lightblue
        }
    </style>
    <ul class="nav nav-tabs navbar-dark bg-info">
        <li class="nav-item">

            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
            @Html.ActionLink("Jupiter Management", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        </li>

        <li class="nav-item ">
        <li>@Html.ActionLink("Home", "Index", "Home")</li>
        <li>@Html.ActionLink("About", "About", "Home")</li>
        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
        </li>
        <li class="nav-item dropdown ">
            <a class="nav-link dropdown-toggle " data-bs-toggle="dropdown" href="#" role="button" aria-expanded="false">Inventories</a>
            <ul class="dropdown-menu">

                <li style="background-color:aqua">@Html.ActionLink("Product", "Index", "Product")</li>
                <li style="background-color:aquamarine">@Html.ActionLink("Purchase", "Index", "Purchase")</li>
                <li style="background-color:aqua">@Html.ActionLink("Sale", "Index", "Sale")</li>
            </ul>
    </ul>

    <div class="container body-content">

        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Jupiter Management Pvt Ltd.</p>
        </footer>
    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/jquery.dataTables.min.js"></script>
    <script src="~/Scripts/dataTables.bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#MyTable").DataTable();
        });
    </script>

</body>
        </html>
